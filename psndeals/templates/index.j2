{% include '_header.j2' %}
{% include '_main_sidebar.j2' %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Playstation Deals
                <small>advanced tables</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-area-chart"></i> Home</a></li>
{#                <li><a href="#">Tables</a></li>#}
{#                <li class="active">Playstation Deals</li>#}
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">US / PS4</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Discount</th>
                                    <th>Original Price</th>
                                    <th>Savings</th>
                                    <th>Release Date</th>
                                    <th>Score</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for deal in deals %}
                                <tr>
                                    <td><a href="{{ deal.url }}" target="_blank"><img src="{{ deal.image }}"></a></td>
                                    <td class=".media-middle"><a href="{{ deal.url }}" target="_blank"><h4>{{ deal.name }}</h4></a></td>
                                    <td>{{ deal.price }}</td>

                                    <td><span class="{{ deal.class.discount }}">{{ deal.discount }}</span></td>

                                    <td>{{ deal.orig_price }}</td>
                                    <td>{{ deal.savings }}</td>
                                    <td>{{ deal.release_date }}</td>
                                    <td>{{ deal.score }}</td>
                                </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Discount</th>
                                    <th>Original Price</th>
                                    <th>Savings</th>
                                    <th>Release Date</th>
                                    <th>Score</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->

            </div>
            <!-- /.row -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.3.3
        </div>
        <strong>Copyright &copy; 2016 <a href="http://psndeals.com">PSNDeals</a>.</strong>
    </footer>
    {% include '_control_sidebar.j2' %}

    <!-- Add the sidebar's background. This div must be placed
         immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->
{% include '_footer.j2' %}
